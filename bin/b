#!/usr/bin/env bash

function set_terminal_profile () {
  echo -e "\033]50;SetProfile=$1\a"
}

on_exit () {
  set_terminal_profile "Default"
}
trap on_exit EXIT

if [ $1 -eq '15' ] || [ $1 -eq '16' ]
then
  host="192.168.71.1$1"
else
  host="192.168.70.1$1"
fi

args="${@:2}"

vpn-connect.sh
set_terminal_profile "Prod"
ssh "root@$host" "$args"
