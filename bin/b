#!/usr/bin/env bash

function set_terminal_profile () {
  echo "tell application \"Terminal\" to set current settings of first window to settings set named \"$1\"" | osascript
}

on_exit () {
  set_terminal_profile "Pro"
}
trap on_exit EXIT

if [ $1 -eq '15' ] || [ $1 -eq '16' ]
then
  host="192.168.71.1$1"
else
  host="192.168.70.1$1"
fi

args="${@:2}"

vpn-connect.sh
set_terminal_profile "Man Page"
ssh "root@$host" "$args"
